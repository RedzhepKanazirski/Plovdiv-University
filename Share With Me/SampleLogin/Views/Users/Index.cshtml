@model ShareWithMe.ViewModels.Users.IndexVM
@using ShareWithMe.Entities;
@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Emilys+Candy&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Alfa+Slab+One&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Aldrich&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @*heart*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <div class="firstmenu">
            <ul class="menu1">
                <li class="menu1">
                    <a class="menu1" href="/Home/Index">About us</a>
                </li>
                @if (this.Context.Session.GetString("LoggedUserId") != null)
                {
                    <li class="menu1">
                        <a class="menu1" href="/Users/Index">USERS</a>
                    </li>
                    <li class="menu1">
                        <a class="menu1" href="/Books/Index">BOOKS</a>
                    </li>
                    <li class="menu1">
                        <a class="menu1" href="/Musics/Index">Musics</a>
                    </li>
                    <li class="menu1">
                        <a class="menu1" href="/Recipes/Index">Recipes</a>
                    </li>
                }
                <li class="menu1">
                    @if (this.Context.Session.GetString("LoggedUserId") == null)
                    {
                        <a class="menu1" href="/Home/Login">LOGIN</a>
                    }
                    else
                    {
                        <a class="menu1" href="/Home/Logout">LOGOUT</a>
                    }
                </li>
            </ul>
        </div>
        <div class="zaglavie6">
            <h1>SHARE with ME</h1>
        </div>
    </header>
    <div class="section">
        @if (this.Context.Session.GetString("LoggedUserId") != null)
        {
            <span class="rightgreeting">Hi, @( this.Context.Session.GetString("LoggedUserUsername")). Glad to see you<i class="fa fa-heart"></i></span>
        }
        else
        {
            <span class="rightgreeting">
                Hello, @(this.Context.Session.GetString("LoggedUserId") != null
                                 ? this.Context.Session.GetString("LoggedUserUsername")
                                 : "Stranger, lets get starting")
            </span>
        }
    </div>
    @*########################################################################################*@
<div class="section">
    <button class="newbuttoriginal"><a class="newabuttoriginal" href="/Users/Create">ADD NEW USER</a></button>

    <table class="tableuseroriginal">
        <tr>
            <th>Username:</th>
            <th>First Name:</th>
            <th>Last Name:</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
        @foreach (User item in Model.Items)
        {
            <tr>
                <td>@item.Username</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td class="tdeddel"> <button class="edeloriginal"><a class="edelaoriginal" href="/Users/Edit?id=@item.Id">edit</a></button></td>
                <td class="tdeddel"> <button class="edeloriginal"><a class="edelaoriginal" href="/Users/Delete?id=@item.Id">delete</a></button></td>
            </tr>
        }
    </table>
</div>
    @*########################################################################################*@
    <div class="foot6">
        <footer>
            <a href="#" class="fa fa-instagram"></a>
            <a href="#" class="fa fa-twitter"></a>
            <a href="#" class="fa fa-google"></a>
            <div><p>SHAREwithME &copy;All Rights Reserved!</p></div>
        </footer>
    </div>
</body>
</html>







