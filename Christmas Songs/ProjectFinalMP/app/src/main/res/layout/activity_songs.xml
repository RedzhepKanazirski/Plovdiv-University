<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="30dp"

        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="Добавете песен:" />

    <EditText
        android:id="@+id/fill_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_text_shape"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Име"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/fill_genre"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:hint="Жанр"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_text_shape"

        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/fill_year"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Година"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/edit_text_shape"

        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/fill_album"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_text_shape"

        android:hint="Изпълнител"
        android:layout_marginBottom="15dp"

        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Добавяне" />

    <Button
        android:id="@+id/btn_view_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Добавени песни" />

    <ListView
        android:id="@+id/view_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>