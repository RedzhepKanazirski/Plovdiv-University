@model IEnumerable<MVC.ViewModels.WeaponVM>

@{
    ViewBag.Title = "Index";
}

@Styles.Render("~/Content/css")



<h2>Weapon</h2>
<p>NOTE:</p>
<p class="redText">Range is from 1 to 10; 10 is the higher!</p>
<p class="redText">Rarity is from 1 to 10; 10 is the higher!</p>

@if (Session["UserId"] != null)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    using (Html.BeginForm())
    {
        <input type="text" placeholder="type" name="search" />
        <input type="submit" value="Search" />
    }
    <br />

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Range)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rarity)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Range)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rarity)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}