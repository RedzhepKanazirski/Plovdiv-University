<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ARENA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li style="color:red;">&#9876;</li>

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    <!--  <li>@Html.ActionLink("About", "About", "Home")</li> -->
                    <!--  <li>@Html.ActionLink("Contact", "Contact", "Home")</li> -->
                    <li></li>

                    @if (Session["UserId"] != null)
                    {
                        <li>@Html.ActionLink("Abilities", "Index", "Ability")</li>
                        <li>@Html.ActionLink("Weapons", "Index", "Weapon")</li>
                        <li>@Html.ActionLink("Clans", "Index", "Clan")</li>
                        <li>@Html.ActionLink("Champions", "Index", "Champion")</li>
                    }

                    @if (Session["UserId"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        <li>@Html.ActionLink("Register", "Register", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Logout", "Login", "Account")</li>
                        <li>@Html.ActionLink("Users", "Index2", "Account")</li>

                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="whiteColorP">&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
